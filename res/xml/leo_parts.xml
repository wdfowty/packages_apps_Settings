<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
     android:title="Software">

    <PreferenceScreen
       android:title="ROM infos"
       android:summary="ROM name, build and system version.">

      <PreferenceCategory
	 android:title="Infos">

	<PreferenceScreen
	   android:key="rom_device"
	   android:title="Device"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_name_version"
	   android:title="Name / Version / Patch"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_system_build"
	   android:title="System / Build / Fingerprint"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_kernel"
	   android:title="Kernel"
	   android:summary=" Unavailable">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="rom_bootloader_radio"
	   android:title="Bootloader / Radio"
	   android:summary=" Unavailable">
	</PreferenceScreen>

      </PreferenceCategory>

      <PreferenceCategory
	 android:title="Updates">

	<PreferenceScreen
	   android:key="rom_update"
	   android:title="Check for updates"
	   android:summary=" Click to check">
	</PreferenceScreen>

      </PreferenceCategory>

    </PreferenceScreen>

    <PreferenceScreen
       android:title="Quick commands"
       android:summary="Reboot &amp; remount commands">

      <PreferenceCategory
	 android:title="Shutdown">

	<PreferenceScreen
	   android:key="shutdown_shutdown"
	   android:title="Shutdown"
	   android:summary=" Do a normal shutdown">
	</PreferenceScreen>

      </PreferenceCategory>

      <PreferenceCategory
	 android:title="Reboot">

	<PreferenceScreen
	   android:key="reboot_reboot"
	   android:title="Reboot"
	   android:summary=" Do a normal reboot">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="reboot_recovery"
	   android:title="Reboot recovery"
	   android:summary=" Reboot into recovery">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="reboot_bootloader"
	   android:title="Reboot bootloader"
	   android:summary=" Reboot into bootloader">
	</PreferenceScreen>

      </PreferenceCategory>

      <PreferenceCategory
	 android:title="Remount /system">

	<PreferenceScreen
	   android:key="remount_rw"
	   android:title="Read-Write"
	   android:summary=" Remount /system with RW permissions">
	</PreferenceScreen>

	<PreferenceScreen
	   android:key="remount_ro"
	   android:title="Read-Only"
	   android:summary=" Remount /system with RO permissions">
	</PreferenceScreen>

      </PreferenceCategory>

    </PreferenceScreen>

    <PreferenceScreen
       android:title="Tweaks"
       android:summary="Advanced tweaks">

      <PreferenceCategory
	 android:title="Stock">

	<PreferenceScreen
	   android:key="stock1"
	   android:title="stock1"
	   android:summary=" stock1">
	</PreferenceScreen>

      </PreferenceCategory>

    </PreferenceScreen>

    <PreferenceScreen
       android:title="User Interface"
       android:summary="Let the interface feets your wills">

      <PreferenceCategory
	 android:title="Status bar">

	<CheckBoxPreference
	   android:key="battery_percent"
	   android:title="Battery percentage"
	   android:summaryOn=" Battery percentage ON"
	   android:summaryOff=" Battery percentage OFF" />

	<CheckBoxPreference
	   android:key="hide_clock"
	   android:title="Hide the clock"
	   android:summaryOn=" Clock is hidden"
	   android:summaryOff=" Clock is visible" />

      </PreferenceCategory>

      <PreferenceCategory
	 android:title="Trackball">

	<CheckBoxPreference
	   android:key="pulse_screen_on"
	   android:title="Pulse while screen is ON"
	   android:summaryOn=" Trackball will pulse"
	   android:summaryOff=" Trackball will not pulse" />

	<CheckBoxPreference
	   android:key="trackball_wake"
	   android:title="Trackball Wake"
	   android:summaryOn=" Trackball wakes the device"
	   android:summaryOff=" Trackball does nothing" />

	<CheckBoxPreference
	   android:key="trackball_unlock"
	   android:title="Trackball Unlock"
	   android:summaryOn=" Trackball unlocks the device"
	   android:summaryOff=" Trackball does nothing"
	   android:dependency="trackball_wake" />

      </PreferenceCategory>

      <PreferenceCategory
	 android:title="Rotation">

	<CheckBoxPreference
	   android:key="rotation_90"
	   android:title="90 degrees" />

	<CheckBoxPreference
	   android:key="rotation_180"
	   android:title="180 degrees" />

	<CheckBoxPreference
	   android:key="rotation_270"
	   android:title="270 degrees" />

      </PreferenceCategory>

    </PreferenceScreen>

    <PreferenceScreen
       android:title="Apps &amp; Addons"
       android:summary="Boost the user experience">

      <PreferenceCategory
	 android:title="Stock">

	<PreferenceScreen
	   android:title="Stock apps"
	   android:summary="Stock apps that you can (only) remove">

	  <CheckBoxPreference
	     android:key="facebook"
	     android:title="Facebook"
	     android:summaryOn=" Facebook installed"
	     android:summaryOff=" Facebook removed" />

	  <CheckBoxPreference
	     android:key="twitter"
	     android:title="Twitter"
	     android:summaryOn=" Twitter installed"
	     android:summaryOff=" Twitter removed" />

	</PreferenceScreen>

      </PreferenceCategory>

      <PreferenceCategory
	 android:title="Addons">

	<PreferenceScreen
	   android:title="Integrated addons"
	   android:summary="Additional apps installed by default">

	  <CheckBoxPreference
	     android:key="filemanager"
	     android:title="File manager"
	     android:summaryOn=" File manager installed"
	     android:summaryOff=" File manager not installed" />

	</PreferenceScreen>

	<PreferenceScreen
	   android:title="Addons"
	   android:summary="Apps to boost user experience">

	  <ListPreference
	     android:key="bootanim"
	     android:title="Bootanimation"
	     android:summary=" Change the bootanimation"
	     android:entries="@array/entries_bootanim"
	     android:entryValues="@array/entryvalues_bootanim"
	     android:defaultValue="1"
	     android:dialogTitle="Select an option" />

	  <CheckBoxPreference
	     android:key="htc_ime"
	     android:title="HTC_IME keyboard"
	     android:summaryOn=" HTC_IME installed"
	     android:summaryOff=" HTC_IME not installed" />

	  <CheckBoxPreference
	     android:key="cpu_led"
	     android:title="%CPU LED monitor"
	     android:summaryOn=" CPUstatusLED installed"
	     android:summaryOff=" CPUstatusLED not installed" />

	  <CheckBoxPreference
	     android:key="player"
	     android:title="DivX/XviD player"
	     android:summaryOn=" RockPlayer installed"
	     android:summaryOff=" RockPlayer not installed" />

	</PreferenceScreen>

      </PreferenceCategory>

    </PreferenceScreen>

    <PreferenceScreen
       android:title="About"
       android:summary="About this Modded SpareParts">

      <PreferenceScreen
	 android:key="about_version"
	 android:title="Version"
	 android:summary=" Settings / Leo Parts v7.0">
      </PreferenceScreen>

      <PreferenceScreen
	 android:key="about_author"
	 android:title="Author"
	 android:summary=" leonnib4 @ xda-developers.com">
      </PreferenceScreen>

      <PreferenceScreen
	 android:key="about_donate"
	 android:title="Donate"
	 android:summary=" Donate via PayPal">
      </PreferenceScreen>

      <PreferenceScreen
	 android:key="about_thanks"
	 android:title="Special thanks to"
	 android:summary=" britoso, Cyanogen, ctso, kmbos, Jr33, crimsondr\n All XDA community">
      </PreferenceScreen>

      <PreferenceScreen
	 android:key="about_addond"
	 android:title="Addons"
	 android:summary=" Apps and Addons are not mine\n Credits go to their authors">
      </PreferenceScreen>

      <PreferenceScreen
	 android:key="about_sources"
	 android:title="Sources"
	 android:summary=" http://github.com/leonnib4/">
      </PreferenceScreen>

    </PreferenceScreen>

  </PreferenceCategory>

  <PreferenceCategory
     android:title="Hardware">

    <PreferenceScreen
       android:title="Data Storage Options"
       android:summary="Storage, App2sd, Dalvik-Cache &amp; more">

      <PreferenceCategory
	  android:title="Storage Sizes">

      <PreferenceScreen
	    android:key="system_storage_levels"
	    android:title="/system"
	    android:summary=" Unavailable">
      </PreferenceScreen>

      <PreferenceScreen
	    android:key="data_storage_levels"
	    android:title="/data"
	    android:summary=" Unavailable">
      </PreferenceScreen>

      <PreferenceScreen
	    android:key="cache_storage_levels"
	    android:title="/cache"
	    android:summary=" Unavailable">
      </PreferenceScreen>

      <PreferenceScreen
	    android:key="sdcardfat_storage_levels"
	    android:title="SDCARD - FAT32 partition"
	    android:summary=" Unavailable">
      </PreferenceScreen>

      <PreferenceScreen
	    android:key="sdcardext_storage_levels"
	    android:title="SDCARD - EXT3 partition"
	    android:summary=" Unavailable">
      </PreferenceScreen>

      <PreferenceScreen
	    android:key="refresh"
	    android:title="Refresh storage data"
	    android:summary="">
      </PreferenceScreen>

      </PreferenceCategory>

      <PreferenceCategory
	  android:title="App2SD / Dalvik-Cache">

      <CheckBoxPreference
	    android:key="app2sd_opt"
	    android:title="Old App2SD"
	    android:summaryOn=" Old App2SD enabled"
	    android:summaryOff=" Old App2SD disabled"/>

      <CheckBoxPreference
	    android:key="dalvik2sd_opt"
	    android:title="Dalvik-Cache on SDCard"
	    android:summaryOn=" Dalvik-Cache on sdcard"
	    android:summaryOff=" Dalvik-Cache on /data"/>

      <CheckBoxPreference
	    android:key="data2sd_opt"
	    android:title="Data on SDCard"
	    android:summaryOn=" Data on sdcard"
	    android:summaryOff=" Data on /system"/>

      <CheckBoxPreference
	    android:key="media2sd_opt"
	    android:title="Media on SDCard"
	    android:summaryOn=" System/media on sdcard"
	    android:summaryOff=" System/media on /system"/>

      </PreferenceCategory>

    </PreferenceScreen>

  </PreferenceCategory>

</PreferenceScreen>
